<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col col-10 col-md-6 text-center mb-4" style="margin-top: 100px;">
      <%= displayed_image 'acm_logo.png', alt: 'ACM logo', class: 'acm-logo' %>
      <span class="text-main fs-2 ms-2"><%= action_text %>する</span>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-10 col-md-6">
      <%= form_with model: post, local: true, class: 'text-center mb-5' do |f| %>
        <%= render 'layouts/validation_error', instance: post %>

        <div class="div-title">
          <div class="text-start">
            <%= f.label :title, class: 'title-p fw-bold text-main', value: '投稿タイトル' %>
            <span class="p_required">必須</span>
          </div>
          <%= f.text_field :title, class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
        </div>
        
        <div class="img-select">
          <div class="text-start">
            <%= f.label :image1, class: 'fw-bold mb-3 text-main', value: '投稿画像1枚目' %>
            <span class="p_required">必須</span>
          </div>
          <%= f.file_field :image1 %>
        </div>
        
  
        
        <div class="py-3">
          <div class="text-start mb-3">
            <%= f.label :catergory, class: 'fw-bold rounded text-main', value: 'カテゴリー' %>
          </div>
          <%= f.text_field :category, class: 'form-control tag-text box-shadow bg-white' %>
        </div>
        
      
        <div class="col-12 d-flex justify-content-center">
          <%= f.submit '送信する', class: 'btn d-block rounded fw-bold box-shadow text-white mt-4 px-5 py-3 fs-6 bg-purple' %>
        </div>
      <% end %>
    </div>
  </div>
</div>